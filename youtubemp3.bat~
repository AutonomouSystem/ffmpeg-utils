@echo off

rem open list of links and download mp3 from them with youtube-dl, then name them 1.mp3, 2.mp3, 3.mp3, etc.

rem youtube-dl mp3 from list

set /p list=Enter list:
for /f "tokens=*" %%a in (%list%) do (
    youtube-dl -x --audio-format mp3 %%a
)

rem name mp3 1.mp3, 2.mp3, 3.mp3, etc.

setlocal enabledelayedexpansion
set i=1
for %%a in (*.mp3) do (
    ren "%%a" "!i!.mp3"
    set /a i+=1
)

REM Path: youtubemp3.bat @echo off rem open link and download mp3 from it with youtube-dl, then name it 1.mp3

rem youtube-dl mp3 from link

rem if not using list then enter link directly instead of list

set /p link=Enter link:
youtube-dl -x --audio-format mp3 %link%

rem name mp3 1.mp3

ren *.mp3 1.mp3

